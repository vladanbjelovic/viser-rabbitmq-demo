<?xml version="1.0" encoding="utf-8" ?>
<log4net debug="false">
  <appender name="ManagedColoredConsoleAppender" type="log4net.Appender.ManagedColoredConsoleAppender">
    <threshold value="DEBUG"/>
    <mapping>
      <level value="FATAL" />
      <foreColor value="DarkRed" />
      <backColor value="White" />
    </mapping>
    <mapping>
      <level value="ERROR" />
      <foreColor value="Red" />
    </mapping>
    <mapping>
      <level value="WARN" />
      <foreColor value="Yellow" />
    </mapping>
    <mapping>
      <level value="INFO" />
      <foreColor value="Green" />
    </mapping>
    <mapping>
      <level value="DEBUG" />
      <foreColor value="Blue" />
    </mapping>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{ISO8601} [%thread] [%property{KeyValue}] %level  %logger %type{1}.%method - %message%newline"/>
    </layout>
  </appender>

  <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="./log/Microservice-A.log" />
    <threshold value="INFO"/>
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <maxSizeRollBackups value="5" />
    <maximumFileSize value="16MB" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{ISO8601} [%thread] [%property{KeyValue}] %level %logger %type{1}.%method - %message%newline"/>
    </layout>
  </appender>

  <appender name="DebugRollingFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="./log/DebugMicroservice-A.log" />
    <threshold value="DEBUG"/>
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <maxSizeRollBackups value="50" />
    <maximumFileSize value="16MB" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{ISO8601} [%thread] [%property{KeyValue}] %level %logger %type{1}.%method - %message%newline"/>
    </layout>
  </appender>

  <root>
    <level value="ALL" />
    <appender-ref ref="ManagedColoredConsoleAppender" />
    <appender-ref ref="RollingFileAppender" />
    <appender-ref ref="DebugRollingFileAppender" />
  </root>
</log4net>
